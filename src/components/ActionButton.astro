---
interface Props {
	text: string;
	href: string;
	fullWidth?: boolean;
	id?: string;
}

const { id, text, href, fullWidth = true } = Astro.props;
---

<div id={id} class="action-btn" style={{ width: fullWidth ? '100%' : '185px' }}>
	<a href={href}>
		<p>{text}</p>
	</a>
</div>

<style lang="scss" }>
	@import '../styles/colors.scss';

	.action-btn {
		background-color: $highlightDark;
		height: 45px;
		margin: 2rem 0;
		border-radius: 10px;

		&:hover {
			background-color: $highlight;
		}
		a {
			width: 100%;
			height: 100%;
			display: flex;
			align-items: center;
			justify-content: center;
			color: $white;
			text-decoration: none;
			text-align: center;
		}
	}
</style>
