---
interface Props {
	text: string;
	href: string;
	fullWidth?: boolean;
	small?: boolean;
}

const { text, href, fullWidth = false, small = false } = Astro.props;
---

<div
	class="action-btn"
	style={{
		width: fullWidth ? '100%' : small ? '110px' : '185px',
		height: small ? '35px' : '45px',
		margin: small ? 0 : '2rem 0',
	}}
>
	<a href={href}>
		<p style={{ fontSize: small ? '0.8rem' : '1rem' }}>{text}</p>
	</a>
</div>

<style lang="scss">
	@import '../styles/main';

	.action-btn {
		background-color: $highlightDark;
		border-radius: 10px;

		&:hover {
			background-color: $highlight;
		}
		a {
			width: 100%;
			height: 100%;
			display: flex;
			align-items: center;
			justify-content: center;
			color: $white;
			text-decoration: none;
			text-align: center;
		}
	}
</style>
