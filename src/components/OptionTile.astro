---
import ActionButton from './ActionButton.astro';

interface Props {
	title: string;
	price: string;
	linkTo: string;
}

const { title, price, linkTo } = Astro.props;
---

<div class="tile">
	<div class="tile__header">
		<p class="tile__header-title">{title}</p>
	</div>
	<div class="tile__content">
		<p class="tile__content-price">{price}</p>
	</div>
	<ActionButton small text="Find Out More" href={linkTo} />
</div>

<style lang="scss">
	@import '../styles/main';

	.tile {
		width: 200px;
		margin: 1rem;

		display: flex;
		flex-direction: column;
		align-items: center;

		&__header {
			&-title {
				font-size: 1.8rem;
				font-weight: bold;
				color: $grey1;
				margin: 0;
			}
		}

		&__content {
			margin: 0.5rem 0;

			&-price {
				font-size: 1rem;
				font-weight: bold;
				color: $grey3;
			}
		}
	}
</style>
