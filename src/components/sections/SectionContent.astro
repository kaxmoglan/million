---
import FlexWrapper from '../wrappers/FlexWrapper.astro';
import SectionTitle from '../sections/SectionTitle.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<div class="margin-wrapper">
	<FlexWrapper>
		<div class="content-container">
			<SectionTitle title={title} />
			<slot />
		</div>
	</FlexWrapper>
</div>

<style lang="scss">
	@import '../../styles/responsive';

	.margin-wrapper {
		margin-bottom: 8rem;

		@include sm-screen {
			margin-bottom: 3rem;
		}
	}

	.content-container {
		width: 800px;

		display: flex;
		flex-direction: column;
		align-items: center;

		@include sm-screen {
			width: 100%;
			padding: 0 1rem;
		}
	}
</style>
