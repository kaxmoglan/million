---
interface Props {
	id?: string;
}

const { id } = Astro.props;
---

<div id={id} class="container">
	<slot />
</div>

<style lang="scss">
	@import '../../styles/responsive.scss';
	.container {
		padding-top: 15vh;
		display: flex;
		gap: 5rem;
		justify-content: center;
		flex-wrap: wrap;

		@include lg-screen {
			gap: 1.8rem;
		}

		@include md-screen {
			flex-direction: column;
			align-items: center;
			gap: 5rem;
		}

		@include sm-screen {
			padding: 2rem 0;
		}
	}
</style>
