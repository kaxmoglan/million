---
import Layout from '../layouts/Layout.astro';
import FullScreenWrapper from '../components/wrappers/FullScreenWrapper.astro';
import NarrowWrapper from '../components/wrappers/NarrowWrapper.astro';
import FlexWrapper from '../components/wrappers/FlexWrapper.astro';
import OptionCardsWrapper from '../components/wrappers/OptionCardsWrapper.astro';
import OptionCard from '../components/OptionCard.astro';
import SeeMore from '../components/SeeMore.astro';
---

<Layout title="Million Digital - Design">
	<main>
		<FullScreenWrapper>
			<NarrowWrapper>
				<FlexWrapper flexDirection="column">
					<h1>design<span class="full-stop">.</span></h1>
					<h3>
						Great design is at the heart of great businesses. Our team creates
						modern and user friendly websites, apps, landing pages, HTML email
						templates and branding with a focus on UX, SEO and, most
						importantly, you and your customers.
						<br />
						<br />
						We have a 3-step process that means you only ever pay for the work you
						ask for.
					</h3>
				</FlexWrapper>
			</NarrowWrapper>
			<SeeMore targetId="option-cards" />
		</FullScreenWrapper>

		<OptionCardsWrapper id="option-cards">
			<OptionCard
				title="Step 1"
				subtitle="Concept"
				description="You tell us what you’re looking for and give us your brief. This can be as vague or as detailed as you’d like."
			>
				<div slot="what-you-get">
					<p>- 3 design concepts</p>
				</div>
				<div slot="what-you-pay">
					<p>From £199 for misc.</p>
					<p>From £299 for logos</p>
					<p>From £599 for websites and apps</p>
				</div>
			</OptionCard>

			<OptionCard
				title="Step 2"
				subtitle="Prototype"
				description="Pick one of our concepts and we'll refine your favourite design."
			>
				<div slot="what-you-get">
					<p>- A refined prototype design</p>
				</div>
				<div slot="what-you-pay">
					<p>From £49 for misc.</p>
					<p>From £199 for logos</p>
					<p>From £599 for websites and apps</p>
				</div>
			</OptionCard>

			<OptionCard
				title="Step 3"
				subtitle="Delivery"
				description="Once you're happy with the prototype, we finalise your design and give you all the deliverables."
			>
				<div slot="what-you-get">
					<p>
						For logos and misc. material, this will be the final vector and
						image files ready for commercial use. For websites and apps, this
						can be the design files, a fully interactive prototype, or we can
						move onto to the build phase of your project.
					</p>
				</div>
				<div slot="what-you-pay">
					<p>From £49 for misc.</p>
					<p>From £99 for logos</p>
					<p>From £299 for websites and apps</p>
				</div>
			</OptionCard>
		</OptionCardsWrapper>
	</main>

	<FullScreenWrapper />

	<style lang="scss">
		@import '../styles/colors.scss';

		h1 {
			font-size: 8rem;
		}

		h3 {
			color: $grey2;
			text-align: center;
			font-weight: normal;
			line-height: 1.6rem;
		}
	</style>
</Layout>
