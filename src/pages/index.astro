</Layout>

<style lang="scss">
	@import '../styles/colors';
	@import '../styles/responsive';

	h2 {
		margin: 2rem 0;
		text-align: center;
		font-size: 5rem;

		.text-highlight {
			padding-left: 0.2rem;
		}

		@include sm-screen {
			font-size: 4rem;
		}

		@include xs-screen {
			font-size: 2.75rem;
		}

		@include xxs-screen {
			font-size: 2rem;
		}
	}

	.container {
		width: 650px;
		margin-bottom: 3rem;

		@include sm-screen {
			width: 600px;
			padding: 0 1rem;
		}

		@include xs-screen {
			width: 100%;
		}

		p {
			// font-weight: 300;
			margin: 0 0 2.5rem 0;
			text-align: center;
			font-size: 1.6rem;
			color: $grey3;
			line-height: 2rem;
			transition: all 500ms ease-in-out;

			@include sm-screen {
				font-size: 1.4rem;
				line-height: normal;
			}

			@include xs-screen {
				font-size: 1rem;
			}

			&:hover {
				color: white;
			}

			.full-stop {
				color: $highlight;
				font-weight: bold;
				padding-left: 0.2rem;
			}
		}
	}

	#transparent {
		color: $black;
		background-color: $black;
		transition: all 0.5s ease-in-out;
		text-shadow: -1px -1px 0 $grey3, 1px -1px 0 $grey3, -1px 1px 0 $grey3,
			1px 1px 0 $grey3;

		&:hover {
			color: $grey3;
			text-shadow: none;
			background-color: none;
		}
	}
</style>
