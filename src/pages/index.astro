---
import SectionHero from '../components/sections/SectionHero.astro';
import SectionContent from '../components/sections/SectionContent.astro';
import NarrowWrapper from '../components/wrappers/NarrowWrapper.astro';
import Layout from '../layouts/Layout.astro';
import Grey1 from '../components/SpanTextGrey1.astro';
import { Form } from '../components/form/Form';
import ArrowLink from '../components/ArrowLink.astro';
---

<Layout title="Million">
	<main>
		<SectionHero />

		<SectionContent id="what-do-we-do" title="What do we do?">
			<h2 class="text-grey1">
				<span class="text-grey2">We</span> design,<br />build <span
					class="text-grey2">&</span
				> host<span class="full-stop">.</span>
			</h2>

			<ArrowLink text="Learn More" link="design" />

			<NarrowWrapper>
				<p>
					Here at <Grey1 text="Million" />, we take you <Grey1
						text="end to end"
					/> from the initial <Grey1 text="consultation" /> and <Grey1
						text="design & prototype"
					/> process, through to <Grey1 text="building" /> the website or application
					on a tech-stack of <Grey1 text="your choice" /> from
					<Grey1 text="Squarespace, Webflow, Shopify" /> and <Grey1
						text="Wordpress,"
					/> through to completely <Grey1 text="custom, bespoke solutions." /> We
					then <Grey1 text="host" /> all the technology for you and offer
					<Grey1 text="stress free support" /> and <Grey1 text="maintenance." />
				</p>
			</NarrowWrapper>

			<h2 class="text-grey1">
				<span class="text-grey2">We</span> write,<br />schedule & post<span
					class="text-highlight">.</span
				>
			</h2>

			<ArrowLink text="Learn More" link="social-media" />

			<NarrowWrapper>
				<p>
					<Grey1
						text="Photo captions, social media posts, website copy, blog posts and more."
					/> We can <Grey1 text="write" /> them, we can <Grey1
						text="schedule"
					/> them, and we can <Grey1 text="release" /> them. <Grey1
						text="We have you covered"
					/>, whatever your writing needs may be<span class="full-stop">.</span>
				</p>
			</NarrowWrapper>
		</SectionContent>

		<SectionContent title="Why Million?">
			<h2 class="text-grey1">
				We're behind<br />the brands you<br />know and love<span
					class="text-highlight">.</span
				>
			</h2>

			<NarrowWrapper>
				<p>
					From <Grey1 text="local" /> businesses, to <Grey1
						text="Fortune 500"
					/> companies and <Grey1 text="unicorn" /> tech
					<Grey1 text="startups," /> our team have collectively <Grey1
						text="done it all."
					/> Whether you're a startup searching for <Grey1 text="your voice," />
					or a successful business looking for
					<Grey1 text="new outreach" /> or a <Grey1 text="full re-brand" /> to reach
					new audiences, <Grey1 text="our team are here to help" /><span
						class="full-stop">.</span
					>
				</p>
			</NarrowWrapper>

			<h2 class="text-grey1">
				Fair and<br /><span id="transparent">transparent</span><br
				/>pricing<span class="text-highlight">.</span>
			</h2>

			<ArrowLink text="Learn More" link="pricing" />

			<NarrowWrapper>
				<p>
					<Grey1 text="We hate hidden costs" /> so we don't have any. Everything
					is <Grey1 text="discussed and agreed with you upfront" />, we can work
					to <Grey1 text="fixed budgets" /> and deadlines and we never ask for the
					full fee up front<span class="full-stop">.</span>
				</p>
			</NarrowWrapper>

			<h2 class="text-grey1">
				<span class="text-grey2">We</span><br />go beyond<span
					class="text-highlight">.</span
				>
			</h2>

			<ArrowLink text="Learn More" link="beyond" />

			<NarrowWrapper>
				<p>
					We pride ourselves on being <Grey1
						text="one team for all your digital needs."
					/> Whether youâ€™re looking for <Grey1
						text="logo design, video edting, photography, audio editing, music sourcing, social media"
					/>
					and <Grey1 text="advertising campaigns," /> or <Grey1
						text="consultancy"
					/> on any service we have to offer, <Grey1 text="we can help" /><span
						class="full-stop">.</span
					>
				</p>
			</NarrowWrapper>
		</SectionContent>

		<SectionContent title="Get In Touch">
			<NarrowWrapper>
				<p>
					For a <Grey1 text="free consultation" /> with <Grey1
						text="no obligation,"
					/> get in touch and <Grey1 text="tell us about your project" /><span
						class="full-stop">.</span
					>
				</p>
				<Form client:idle />
			</NarrowWrapper>
		</SectionContent>
	</main>
</Layout>

<style lang="scss">
	@import '../styles/colors';
	@import '../styles/responsive';

	h2 {
		margin: 2rem 0 1rem 0;
		text-align: center;
		font-size: 5rem;

		.text-highlight {
			padding-left: 0.2rem;
		}

		@include sm-screen {
			font-size: 4rem;
		}

		@include xs-screen {
			font-size: 2.75rem;
		}

		@include xxs-screen {
			font-size: 2rem;
		}
	}

	p {
		margin: 0 0 2.5rem 0;
		text-align: center;
		font-size: 1.6rem;
		color: $grey3;
		line-height: 2rem;
		transition: all 500ms ease-in-out;

		@include sm-screen {
			font-size: 1.4rem;
			line-height: normal;
		}

		@include xs-screen {
			font-size: 1rem;
		}

		.full-stop {
			color: $highlight;
			font-weight: bold;
			padding-left: 0.2rem;
		}
	}

	#transparent {
		color: $black;
		background-color: $black;
		transition: all 0.5s ease-in-out;
		text-shadow: -1px -1px 0 $grey3, 1px -1px 0 $grey3, -1px 1px 0 $grey3,
			1px 1px 0 $grey3;

		&:hover {
			color: $grey3;
			text-shadow: none;
			background-color: none;
		}
	}
</style>
