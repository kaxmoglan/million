---
import Layout from '../layouts/Layout.astro';
import FullScreenWrapper from '../components/wrappers/FullScreenWrapper.astro';
import NarrowWrapper from '../components/wrappers/NarrowWrapper.astro';
import FlexWrapper from '../components/wrappers/FlexWrapper.astro';
import OptionCardsWrapper from '../components/wrappers/OptionCardsWrapper.astro';
import OptionCard from '../components/OptionCard.astro';
import SeeMore from '../components/SeeMore.astro';
import { OptionId } from '../utils/optionCardUtils';

const gridTemplateRows = '3fr 2.5fr 1fr';
---

<Layout title="Million Digital - Maintain">
	<FullScreenWrapper>
		<NarrowWrapper>
			<FlexWrapper flexDirection="column" className="page__header">
				<h1>maintain<span class="full-stop">.</span></h1>
				<h3>Stress free support, updates and maintenance.</h3>
			</FlexWrapper>
		</NarrowWrapper>
		<SeeMore />
	</FullScreenWrapper>

	<OptionCardsWrapper>
		<OptionCard
			title="Level 1"
			subtitle="Essential maintenance."
			optionId={OptionId.MAINTAIN_LEVEL_1}
			description="Essential maintenance for your website or app."
			gridTemplateRows={gridTemplateRows}
		>
			<div slot="what-you-get">
				<ul>
					<li>Priority support</li>
					<li>Compatbility udpates for new devices</li>
					<li>Unlimited bug fixes</li>
				</ul>
			</div>
			<div slot="what-you-pay">
				<p>From £29 per month</p>
			</div>
		</OptionCard>

		<OptionCard
			title="Level 2"
			subtitle="Premium maintenance."
			optionId={OptionId.MAINTAIN_LEVEL_2}
			description="Premium maintenance for your website or app."
			gridTemplateRows={gridTemplateRows}
		>
			<div slot="what-you-get">
				<ul>
					<li>Everything under Level 1</li>
					<li>10% off everything</li>
				</ul>
			</div>
			<div slot="what-you-pay">
				<p>From £79 per month</p>
			</div>
		</OptionCard>

		<OptionCard
			title="Level 3"
			subtitle="Ultimate maintenance."
			optionId={OptionId.MAINTAIN_LEVEL_3}
			description="Ultimate maintenance for your website or app."
			gridTemplateRows={gridTemplateRows}
		>
			<div slot="what-you-get">
				<ul>
					<li>Everything under Level 1</li>
					<li>15% off everything</li>
				</ul>
			</div>
			<div slot="what-you-pay">
				<p>From £149 per month</p>
			</div>
		</OptionCard>
	</OptionCardsWrapper>
</Layout>
