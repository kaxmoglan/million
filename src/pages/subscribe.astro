---
import Layout from '../layouts/Layout.astro';
import FullScreenWrapper from '../components/wrappers/FullScreenWrapper.astro';
import NarrowWrapper from '../components/wrappers/NarrowWrapper.astro';
import FlexWrapper from '../components/wrappers/FlexWrapper.astro';
import OptionCardsWrapper from '../components/wrappers/OptionCardsWrapper.astro';
import OptionCard from '../components/OptionCard.astro';
import SeeMore from '../components/SeeMore.astro';
import { OptionCardId } from '../utils/optionCardUtils';

const gridTemplateRows = '1fr 1fr';
const optionCardContentHeight = '300px';
---

<Layout title="Million Digital - Subscribe">
	<main>
		<FullScreenWrapper>
			<NarrowWrapper>
				<FlexWrapper flexDirection="column" className="page__header">
					<h1 id="your-million">
						Your Million<span class="full-stop">.</span>
					</h1>
					<h3>
						Our entire team at your disposal with unlimited requests for a fixed
						monthly fee.
					</h3>
				</FlexWrapper>
			</NarrowWrapper>
			<SeeMore targetId="option-cards" />
		</FullScreenWrapper>

		<OptionCardsWrapper id="option-cards">
			<OptionCard
				title="Quarter"
				subtitle="Quarterly rolling contract."
				id={OptionCardId.SUBSCRIBE_QUARTER}
				gridTemplateRows={gridTemplateRows}
				contentHeight={optionCardContentHeight}
			>
				<div slot="what-you-get">
					<ul>
						<li>- Unlimited everything</li>
					</ul>
				</div>
				<div slot="what-you-pay">
					<p>£6,495 per month</p>
				</div>
			</OptionCard>

			<OptionCard
				title="Biannual"
				subtitle="Biannually rolling contract."
				id={OptionCardId.SUBSCRIBE_BIANNUAL}
				gridTemplateRows={gridTemplateRows}
				contentHeight={optionCardContentHeight}
			>
				<div slot="what-you-get">
					<ul>
						<li>- Unlimited everything</li>
					</ul>
				</div>
				<div slot="what-you-pay">
					<p>£6,295 per month</p>
				</div>
			</OptionCard>

			<OptionCard
				title="Annual"
				subtitle="Annually rolling contract."
				id={OptionCardId.SUBSCRIBE_ANNUAL}
				gridTemplateRows={gridTemplateRows}
				contentHeight={optionCardContentHeight}
			>
				<div slot="what-you-get">
					<ul>
						<li>- Unlimited everything</li>
					</ul>
				</div>
				<div slot="what-you-pay">
					<p>£5,995 per month</p>
				</div>
			</OptionCard>
		</OptionCardsWrapper>
	</main>
</Layout>

<style lang="scss">
	#your-million {
		font-size: 6rem;
	}
</style>
